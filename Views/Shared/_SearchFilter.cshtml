                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#home" role="tab"><i class="fa fa-hotel"></i> Hotels</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#profile" role="tab"><i class="fa fa-plane"></i> Flights</a>
                                </li>
                                <li class="nav-item">
