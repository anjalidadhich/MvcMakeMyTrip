                            </ul>
                            <div class="clearfix"></div>
                        </div>*@
                    <div class="filter-output booking-form-box col-lg-7">
                        <!-- Tab panes -->

                        <div class="tab-content  padding-30px background-white">

                            <div class="tab-pane active" id="home" role="tabpanel">
                                @using (Html.BeginForm("Index", "Demo", new { CatId = "1" }, FormMethod.Post))
                                {
                                    <div class="form-group margin-bottom-5px">
                                        <label>Destination</label>
                                        <div class="destination">
                                            @Html.DropDownList("CityId", (IEnumerable<SelectListItem>)ViewBag.CityList, "--Select--", htmlAttributes: new { @class = "js-example-tags form-control" })
                                          
                                        </div>
                                    </div>
                                    <div class="form-group margin-bottom-5px">
                                        <label>Check In</label>
                                        <div class="date-input">
                                            @*<input type="text" class="input-text datepicker full-width" placeholder="15 / 5 / 2017">*@
                                            @Html.EditorFor(model => model.CheckInDate, new { htmlAttributes = new { @class = "input-text datepicker full-width" } })
                                        </div>

                                    </div>
                                    <div class="form-group margin-bottom-5px">
                                        <label>Check Out</label>
                                        <div class="date-input">
                                            @*<input type="text" class="input-text datepicker full-width" placeholder="15 / 5 / 2017">*@
                                            @Html.EditorFor(model => model.CheckOutDate, new { htmlAttributes = new { @class = "input-text datepicker full-width" } })
                                        </div>
                                    </div>
                                    <div class="row margin-bottom-10px">
                                        <div class="form-group col">
                                            <label>Rooms</label>
                                            <div class="rooms">
                                                @Html.EditorFor(model => model.NoOfRoom, new { htmlAttributes = new { @class = "input-text full-width" } })
                                                @*<input type="text" class="input-text full-width" placeholder="1">*@
                                            </div>
                                        </div>
                                        <div class="form-group col">
                                            <label>Children</label>
                                            <div class="children">
                                                @*<input type="text" class="input-text full-width" placeholder="0">*@
                                                @Html.EditorFor(model => model.NoOfPeople, new { htmlAttributes = new { @class = "input-text full-width" } })
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn-sm btn-lg btn-block background-main-color text-white text-center text-uppercase font-weight-600"><i class="fa fa-search"></i> Hotel  Search</button>
                                }
                            </div>

                            <div class="tab-pane" id="profile" role="tabpanel">
                                <!-- ====== Flights ====== -->
                                @*<form action="@Url.Action("Search", "Flight")" id="form" method="post" >*@
                                @using (Html.BeginForm("Index", "Demo", new { CatId = "3" }, FormMethod.Post))
                                {
                                    <div class="form-group margin-bottom-5px">
                                        <label>Flying from:</label>
                                        <div class="destination">
                                            @Html.EditorFor(model => model.From, new { htmlAttributes = new { @class = "input-text full-width" } })
                                            @*<input type="text" class="input-text full-width" placeholder="Flying from">*@
                                        </div>
                                    </div>
                                    <div class="form-group margin-bottom-5px">
                                        <label>Flying to:</label>
                                        <div class="destination">
                                            @*<input type="text" class="input-text full-width" placeholder="Flying to">*@
                                            @Html.EditorFor(model => model.To, new { htmlAttributes = new { @class = "input-text full-width" } })
                                        </div>
                                    </div>
                                    <div class="form-group margin-bottom-5px">
                                        <label>Departing:</label>
                                        <div class="date-input">
                                            @*<input type="text" class="input-text datepicker full-width" placeholder="15 / 5 / 2017">*@
                                            @Html.EditorFor(model => model.DepartureDate, new { htmlAttributes = new { @class = "input-text datepicker full-width" } })
                                        </div>
                                    </div>
                                    <div class="form-group margin-bottom-25px">
                                        <label>Returning:</label>
                                        <div class="date-input">
                                            @*<input type="text" class="input-text datepicker full-width" placeholder="15 / 5 / 2017">*@
                                            @Html.EditorFor(model => model.ArrivingDate, new { htmlAttributes = new { @class = "input-text datepicker full-width" } })
                                        </div>
                                    </div>
                                    <button type="submit" id="btnSend" class="btn-sm btn-lg btn-block background-main-color text-white text-center text-uppercase font-weight-600"><i class="fa fa-search"></i> Flights  Search</button>
                                }
                                @*</form>*@
                                <!-- ====== //  Flights ====== -->
                            </div>
                            <div class="tab-pane" id="messages" role="tabpanel">
                                <!-- ====== Cars ====== -->
                                @using (Html.BeginForm("Index", "Demo", new { CatId = "4" }, FormMethod.Post))
                                {
                                    <div class="form-group  margin-bottom-5px">
                                        <label>Location:</label>
                                        <div class="destination">
                                            @Html.EditorFor(model => model.From, new { htmlAttributes = new { @class = "input-text full-width" } })
                                            @*<input type="text" class="input-text full-width" placeholder="Location">*@
                                        </div>
                                    </div>
                                    <div class="form-group  margin-bottom-5px">
                                        <label>Type of car :</label>
                                        <div class="destination">
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "input-text full-width" } })
                                            @*<input type="text" class="input-text full-width" placeholder="Type of car">*@
                                        </div>
                                    </div>
                                    <div class="form-group  margin-bottom-5px">
                                        <label>Pick up Date:</label>
                                        <div class="date-input">
                                            @Html.EditorFor(model => model.ArrivingDate, new { htmlAttributes = new { @class = "input-text datepicker full-width" } })
                                            @*<input type="text" class="input-text datepicker full-width" placeholder="15 / 5 / 2017">*@
                                        </div>
                                    </div>
                                    <div class="form-group margin-bottom-25px">
                                        <label>Drop off Date:</label>
                                        <div class="date-input">
                                            @Html.EditorFor(model => model.DepartureDate, new { htmlAttributes = new { @class = "input-text datepicker full-width" } })
                                            @*<input type="text" class="input-text datepicker full-width" placeholder="15 / 5 / 2017">*@
                                        </div>
                                    </div>
                                    <button type="submit" class="btn-sm btn-lg btn-block background-main-color text-white text-center text-uppercase font-weight-600"><i class="fa fa-search"></i> Cars  Search</button>
                                }
                                <!-- ====== //  Cars ====== -->
                            </div>
                        </div>
                        <!-- Tab panes -->
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

        </div>
    </div>
</div>
